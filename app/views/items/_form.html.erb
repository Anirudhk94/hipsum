<% if @item.errors.any? %>
	  <div id="errors">
	  	<h2><%=pluralize(@item.errors.count, "error") %> stopped this from saving</h2>
	  	<ul>
	  		<% @item.errors.full_messages.each do |msg| %>
	  			<li><%= msg %></li>
	  		<% end %>
	  	</ul>
	  </div>
<% end %>

<%= simple_form_for @item do |f| %>
  <%= f.input :title, label: "Task title" %>
  <%= f.input :description %>
  <%= f.button :submit %>
<% end %>